<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="WorkoutGamifier.Views.ActionsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Actions">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="15" Padding="20">
            <Label Text="Point Actions" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            
            <Label Text="Define actions to earn points during workouts" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="Gray" />
            
            <Button Text="Create New Action" 
                    Clicked="OnAddActionClicked" 
                    BackgroundColor="Green" 
                    HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Actions List -->
        <CollectionView Grid.Row="1" 
                        x:Name="ActionsCollectionView" 
                        BackgroundColor="Transparent"
                        Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Frame BackgroundColor="White" 
                               BorderColor="LightGray" 
                               CornerRadius="10" 
                               Padding="20"
                               Margin="0,0,0,15">
                            
                            <Grid RowDefinitions="Auto,Auto,Auto" 
                                  ColumnDefinitions="*,Auto">
                                
                                <!-- Action Description -->
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="{Binding Description}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" />
                                
                                <!-- Point Value -->
                                <StackLayout Grid.Row="1" Grid.Column="0" 
                                             Orientation="Horizontal" 
                                             Spacing="10" 
                                             Margin="0,5,0,0">
                                    <Label Text="{Binding PointValue, StringFormat='{0} points'}" 
                                           FontSize="16" 
                                           TextColor="Green" 
                                           FontAttributes="Bold" />
                                    <Label Text="â€¢" 
                                           FontSize="14" 
                                           TextColor="Gray" 
                                           VerticalOptions="Center" />
                                    <Label Text="{Binding CreatedAt, StringFormat='Created: {0:MMM dd, yyyy}'}" 
                                           FontSize="12" 
                                           TextColor="Gray" />
                                </StackLayout>
                                
                                <!-- Action Buttons -->
                                <StackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                                             Spacing="10" 
                                             VerticalOptions="Center">
                                    <Button Text="Edit" 
                                            CommandParameter="{Binding}"
                                            Clicked="OnEditActionClicked" 
                                            BackgroundColor="Orange" 
                                            FontSize="12" />
                                    <Button Text="Delete" 
                                            CommandParameter="{Binding}"
                                            Clicked="OnDeleteActionClicked" 
                                            BackgroundColor="Red" 
                                            FontSize="12" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="40">
                    <Label Text="No actions defined yet" 
                           FontSize="18" 
                           HorizontalOptions="Center" 
                           TextColor="Gray" />
                    <Label Text="Create your first action to start earning points" 
                           FontSize="14" 
                           HorizontalOptions="Center" 
                           TextColor="Gray" 
                           Margin="0,10,0,0" />
                    <Button Text="Create Action" 
                            Clicked="OnAddActionClicked" 
                            BackgroundColor="Green" 
                            HorizontalOptions="Center" 
                            Margin="0,20,0,0" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1" 
                           x:Name="LoadingIndicator"
                           IsVisible="False" 
                           IsRunning="False" 
                           Color="Blue" 
                           HeightRequest="50" 
                           VerticalOptions="Center" />

    </Grid>
</ContentPage>